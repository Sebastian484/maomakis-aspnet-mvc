@model IEnumerable<appRestauranteDSW_CoreMVC.Models.Mesas>

@{
    ViewData["Title"] = "Mesas";
}

<div class="container mt-4">
    <h1 class="mb-4">Mesas</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nueva Mesa
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.id)</th>
                <th>@Html.DisplayNameFor(model => model.cantidad_asientos)</th>
                <th>@Html.DisplayNameFor(model => model.estado)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.id)</td>
                    <td>@Html.DisplayFor(modelItem => item.cantidad_asientos)</td>
                    <td>@Html.DisplayFor(modelItem => item.estado)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary btn-sm me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm me-1 text-white">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>